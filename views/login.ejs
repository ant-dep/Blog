<div class="login">
  <h2>Connectez vous</h2>
  <% if (error !== null) { %>
  <p><%= error %></p>
  <% } %>
  <form action="/login" method="post">
    <label>Email</label>
    <input type="text" name="email" />
    <label>Password</label>
    <input type="password" name="password" />
    <input type="submit" name="Se connecter" />
  </form>
</div>
